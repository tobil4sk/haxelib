{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "hxml",
			"file": "client.hxml",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"command": "neko",
			"label": "Haxelib client unit tests",
			"args" :["bin/test.n"],
			"dependsOrder": "sequence",
			"dependsOn":[
				"haxe: client.hxml",
				"haxe: client_tests.hxml"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}
